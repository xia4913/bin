#!/bin/sh -Ceu

pom "$@" | awk '
	function moon(s) {
		if (s ~ /New/) {
			return "ğŸŒ‘";
		} else if (s ~ /Crescent/) {
			return s ~ /Waxing/ ? "ğŸŒ’" : "ğŸŒ˜";
		} else if (s ~ /Quarter/) {
			return s ~ /First/ ? "ğŸŒ“" : "ğŸŒ—";
		} else if (s ~ /Gibbous/) {
			return s ~ /Waxing/ ? "ğŸŒ”" : "ğŸŒ–";
		} else if (s ~ /Full/) {
			return "ğŸŒ•";
		}
	}
	function phase(s) {
		if (match($0, /([0-9]+)%/, a)) {
			return sprintf("%d%%", a[1]);
		}
	}
	{
		print(moon($0), phase($0));
	}
'
