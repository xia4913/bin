#!/bin/sh -Ceu

# shellcheck disable=SC1091
. "$(dirname "$0")/subr"

find_dirs() {
	to-line "$@" | while read -r i; do
		if [ -d "$i" ]; then
			echo "$i"
		fi
	done
}
unique_symlinks() {
	xargs -r realpath | awk '!a[$0]++{print}'
}
zip_compat() {
	to-line "$@" | while read -r i; do
		echo "$i"
		echo "$i"/compat
	done
}
replace_bin() {
	dest=$1
	shift
	to-line "$@" | sed -n '/\/bin$/s#/bin$#/'"$dest"'#p'
}
set_path() {
	list=$(path_list "$@")
	if [ -n "$list" ]; then
		# shellcheck disable=SC2154
		case "$sh_opt" in
		s)
			echo "PATH='$list'"
			;;
		z)
			echo "path=($list)"
			;;
		c)
			echo "set path=($list)"
			;;
		esac
	fi
}
path_list() {
	case "$sh_opt" in
	s)
		echo "$@" | tr ' ' :
		;;
	c|z)
		echo "$@"
		;;
	esac
}
environ_from_file() {
	file=$1
	if ! [ -f "$file" ]; then
		return
	fi
	<"$file" sed -n '/=/{s/=/ /p}'| while read -r name value; do
		set-environ-command -"$sh_opt" "$name" "$value"
	done
}
distribution() {
	if [ -f /etc/os-release ]; then
		awk -F= '($1 == "ID") { print $2; }' /etc/os-release
	else
		echo unknown
	fi
}

host=$(hostname -s)
os=$(uname -s)
machine=$(uname -m)
dist=$(distribution)
homes=$(find_dirs \
	"$(zip_compat \
		"$HOME"/bin/host/"$host" \
		"$HOME"/bin/arch/"$os"/"$machine" \
		"$HOME"/bin/arch/"$os" \
		"$HOME"/bin/dist/"$dist" \
		"$HOME"/bin/scripting \
		"$HOME"/bin/aliasic \
		"$HOME"/bin/shims \
		"$HOME"/bin/wrapper \
		"$HOME"/bin/git \
		"$HOME"/bin/cargo \
		"$HOME"/bin/zellij \
		"$HOME"/bin/games \
		"$HOME"/bin \
	)"
)

langs=$(find_dirs \
	"$HOME"/lib/ruby/misc/bin \
	"$HOME"/.cargo/bin \
	"$HOME"/.deno/bin \
	"$HOME"/.go/bin \
	"$HOME"/.linuxbrew/bin \
	"$HOME"/.local/bin \
)
userlands='
	/usr/local/bin
	/snap/bin
	/usr/pkg/bin
	/usr/bin
	/bin
'
extras=$(find_dirs \
    /opt/mincs/bin \
)

sbin=$(find_dirs "$(replace_bin sbin "$homes $userlands $extras")")
games=$(find_dirs "$(replace_bin games "$homes $userlands $extras")")
userlands=$(find_dirs "$userlands")
path=$(echo "$homes $langs $extras $userlands $sbin $games" | \
	unique_symlinks)

set_path "$path"
